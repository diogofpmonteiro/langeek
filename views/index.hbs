{{#each allPosts}}
  <div class="container">
    <div class="row">
      <div class="col-3">
      </div>
      <div class="col-6">
        <div class="card my-5 w-100" style="width: 25rem">

          <a href="/{{this.author._id}}">
            <h3>
              <img
                src="{{this.author.profilePictureURL}}"
                width="50px"
                height="50px"
              />{{this.author.username}}</h3></a>

          <h5 class="card-title">{{this.title}}</h5>
          <img src="{{this.postPicture}}" class="card-img-top" alt="post picture" />
          <div class="card-body">
            <p class="card-text">
              {{this.description}}
            </p>
            <button class="btn btn-primary" type="submit"><a
                href="/search?languageToSearch={{this.languageTag}}"
              >#{{this.languageTag}}</a></button>
          </div>
        </div>
      </div>
      <div class="col-3">
      </div>
    </div>
  </div>
{{/each}}