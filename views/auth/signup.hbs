<form class="row g-3" action="/signup" method="POST" enctype="multipart/form-data">
  <div class="col-md-6">
    <label class="form-label">Username</label>
    <input type="text" class="form-control" name="username">
  </div>
  <div class="col-md-6">
    <label class="form-label">Password</label>
    <input type="password" class="form-control" name="password">
  </div>
  <div class="col-md-4">
    <label class="form-label">Languages I speak</label>
    <select class="form-select" name="languagesISpeak" multiple>
    {{#each languages}}
    <option>{{this}}</option>
    {{/each}}
  </select>
  </div>
  <div class="col-md-4">
    <label class="form-label">Languages I want to learn</label>
    <select class="form-select" name="languagesIWantToLearn" multiple>
    {{#each languages}}
    <option>{{this}}</option>
    {{/each}}
  </select>
  </div>

  <div class="col-md-6">
    <label class="form-label">How I want people to contact me</label>
    <input type="text" class="form-control" name="socialMediaLink" placeholder="twitter.com/example">
  </div>
  
  <div class="col-md-2">
    <label class="form-label">Profile Picture</label>
    <input type="file" class="form-control" name="profilePictureURL">
  </div>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Sign in</button>
  </div>
</form>