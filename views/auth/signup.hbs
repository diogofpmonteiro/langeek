<form class="row g-3" action="/signup" method="POST" enctype="multipart/form-data">
  <div class="col-md-6">
    <label class="form-label">Username</label>
    <input type="text" class="form-control" name="username" required>
  </div>
  <div class="col-md-6">
    <label class="form-label">Password</label>
    <input type="password" class="form-control" name="password" required>
  </div>
  <div class="col-md-4">
    <label class="form-label">Languages I speak</label>
    <select class="form-select" name="languagesISpeak" multiple required>
    {{#each languages}}
    <option>{{this}}</option>
    {{/each}}
  </select>
  </div>
  <div class="col-md-4">
    <label class="form-label">Languages I want to learn</label>
    <select class="form-select" name="languagesIWantToLearn" multiple required>
    {{#each languages}}
    <option>{{this}}</option>
    {{/each}}
  </select>
  </div>

  <div class="col-md-6">
    <label class="form-label">How I want people to contact me</label>
    <input type="text" class="form-control" name="socialMediaLink" placeholder="twitter.com/example" required>
  </div>
  
  <div class="col-md-2">
    <label class="form-label">Profile Picture</label>
    <input type="file" class="form-control" name="profilePictureURL" required>
  </div>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Sign up</button>
  </div>
</form>

{{#if errorMessage}}
<div class="alert alert-warning d-flex align-items-center" role="alert">
<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </svg>
  <div>
    {{ errorMessage }}
  </div>
</div>
{{/if}}